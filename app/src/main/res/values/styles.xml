<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Base.Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="btn_notification_style">
        <item name="android:layout_width">80dip</item>
        <item name="android:layout_height">45dip</item>
        <item name="android:layout_gravity">center|right</item>
        <item name="android:background">?android:listChoiceBackgroundIndicator</item>
    </style>

    <style name="MaterialSettings" parent="MaterialSettingsTheme">
        <item name="msColorPrimary">@color/colorPrimary</item>
        <item name="msColorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="msColorAccent">@color/colorAccent</item>
        <item name="msColorHeader">@color/colorPrimary</item>
    </style>

</resources>
