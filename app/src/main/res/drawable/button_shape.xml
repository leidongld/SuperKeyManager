<?xml version="1.0" encoding="UTF-8"?>  
<layer-list  
    xmlns:android="http://schemas.android.com/apk/res/android">  
    <!-- 边框颜色值 --><item>
    <shape>  
        <solid  
            android:color="@color/colorPrimary" />
        <corners  
            android:radius="20dp" />
  
    </shape>  
</item>  
    <!-- 主体背景颜色值 -->  
    <item  
        android:bottom="2dp"
        android:right="2dp"
        android:top="2dp"
        android:left="2dp">
        <shape>  
            <gradient  
                android:startColor="#FFFFFF"
                android:centerColor="#FFFFFF"
                android:endColor="#FFFFFF"
                android:type="linear"  
                android:angle="90"  
                android:centerX="0.5"  
                android:centerY="0.5" />  
  
            <padding  
                android:left="1dp"
                android:top="1dp"
                android:right="1dp"
                android:bottom="1dp" />
            <!-- 圆角 -->  
            <corners  
                android:radius="20dp" />
        </shape>  
    </item>  
</layer-list>  